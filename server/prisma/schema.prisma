generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  USER
}

model User {
  id         String    @id @default(uuid())
  firstName  String
  middleName String?
  lastName   String
  email      String    @unique
  password   String?
  role       ROLE      @default(USER)
  sessions   Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id     String @id @default(uuid())
  userId String
  sid    String @unique

  expires DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
